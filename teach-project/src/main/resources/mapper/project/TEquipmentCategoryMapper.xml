    <sql id="selectTEquipmentCategoryVo">
        select equipment_id, parent_id, code, type, name, unit, technical_data, order_num, level, create_by, create_time, update_by, update_time, remark, del_flag, state from t_equipment_category
    </sql>

    <select id="selectTEquipmentCategoryList" parameterType="com.hlzt.project.domain.TEquipmentCategory" resultMap="TEquipmentCategoryResult">
        <include refid="selectTEquipmentCategoryVo"/>
        <where>  
            <if test="parentId != null "> and parent_id = #{parentId}</if>
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="unit != null  and unit != ''"> and unit = #{unit}</if>
            <if test="technicalData != null  and technicalData != ''"> and technical_data = #{technicalData}</if>
            <if test="orderNum != null "> and order_num = #{orderNum}</if>
            <if test="level != null "> and level = #{level}</if>
            <if test="state != null "> and state = #{state}</if>
        </where>
        order by order_num
    </select>
    
    <select id="selectTEquipmentCategoryById" parameterType="Long" resultMap="TEquipmentCategoryResult">
        <include refid="selectTEquipmentCategoryVo"/>
        where equipment_id = #{equipmentId}
    </select>
        
    <insert id="insertTEquipmentCategory" parameterType="com.hlzt.project.domain.TEquipmentCategory">
        insert into t_equipment_category
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="equipmentId != null">equipment_id,</if>
            <if test="parentId != null">parent_id,</if>
            <if test="type != null">type,</if>
            <if test="code != null">code,</if>
            <if test="name != null">name,</if>
            <if test="unit != null">unit,</if>
            <if test="technicalData != null">technical_data,</if>
            <if test="orderNum != null">order_num,</if>
            <if test="level != null">level,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
            <if test="delFlag != null">del_flag,</if>
            <if test="state != null">state,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="equipmentId != null">#{equipmentId},</if>
