<mapper namespace="com.hlzt.project.mapper.TEquipmentCategoryMapper">
    
    <resultMap type="com.hlzt.project.domain.TEquipmentCategory" id="TEquipmentCategoryResult">
        <result property="equipmentId"    column="equipment_id"    />
        <result property="parentId"    column="parent_id"    />
        <result property="code"    column="code"    />
        <result property="type"    column="type"    />
        <result property="name"    column="name"    />
        <result property="unit"    column="unit"    />
        <result property="technicalData"    column="technical_data"    />
        <result property="orderNum"    column="order_num"    />
        <result property="level"    column="level"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
        <result property="delFlag"    column="del_flag"    />
        <result property="state"    column="state"    />
