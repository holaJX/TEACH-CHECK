            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="delFlag != null">del_flag = #{delFlag},</if>
            <if test="state != null">state = #{state},</if>
        </trim>
        where equipment_id = #{equipmentId}
    </update>

    <delete id="deleteTEquipmentCategoryById" parameterType="Long">
        delete from t_equipment_category where equipment_id = #{equipmentId}
    </delete>

    <delete id="deleteTEquipmentCategoryByIds" parameterType="String">
        delete from t_equipment_category where equipment_id in
        <foreach item="equipmentId" collection="array" open="(" separator="," close=")">
            #{equipmentId}
        </foreach>
    </delete>
